{
  "name": "viewer-pro-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A modern image viewer component for web applications",
  "author": "Icey Wu <3128006406@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/iceywu/viewer-pro#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iceywu/viewer-pro.git"
  },
  "bugs": {
    "url": "https://github.com/iceywu/viewer-pro/issues"
  },
  "funding": "https://github.com/sponsors/iceywu",
  "keywords": [
    "ViewerPro",
    "image",
    "viewer",
    "web",
    "javascript",
    "typescript",
    "vue",
    "react",
    "angular",
    "monorepo"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "dev:core": "pnpm --filter viewer-pro dev",
    "dev:playground": "pnpm --filter playground dev",
    "dev:docs": "pnpm --filter docs dev",
    "build": "pnpm --filter viewer-pro build",
    "build:all": "pnpm -r build",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
